<div class="container">
  <div class="row">
    <h1 class="text-center">Add a new Ingredient!</h1>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <% if @dose.errors.any? %>
          <ul>
            <% @dose.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group">
          <%= f.input :description, label: 'Dose Amount?', class: "form-control" %>
          <%= f.association :ingredient, selected: @preselected_ingredient_id %>
        </div>
        <%= f.button :submit, "Add this dose to the list", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
