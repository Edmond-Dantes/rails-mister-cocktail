<h1><%= @cocktail.name %></h1>

<h3>Ingredients</h3>

<ol>
  <% @cocktail.ingredients.each do |ingredient| %>
    <li>
      <% dose = Dose.where(cocktail: @cocktail, ingredient: ingredient).first %>

      <%= dose.description + ' of ' + ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
  <li>
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
  </li>
</ol>

