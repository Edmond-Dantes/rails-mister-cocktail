<h1><%= @cocktail.name %></h1>

<h3>Ingredients</h3>

<%= cl_image_tag(@cocktail.photo, height: 300, width: 400, crop: :fill) unless @cocktail.photo.nil?%>

<ol>
  <% @cocktail.doses.each do |dose| %>
    <li>

      <%= dose.description + ' of ' + dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
  <li>
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
  </li>
</ol>

